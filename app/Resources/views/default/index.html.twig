{% extends 'base.html.twig' %}


{% block body %}

    <div class="container">

        <div class="row">
            <div class="col s12 card-panel navy-grey darken-5 z-depth-5">
                <div class="col s12  center-align card-panel grey lighten-4 padding2">

                    <div class="row top-margin card-panel accent-4 navy-grey-text text-darken-1">
                        <h1 class="left-align  col s12 flow-text">Last product added</h1>
                    </div>

                    <div class="row">
                        <div class="col s8">
                            <div class="card">
                                <div class="card-image">
                                    <img class= "responsive-img"src="{{ asset(newestProducts[0].picture) }}" alt="{{ newestProducts[0].name }}">
                                    <span class="card-title">
                                        <a href="#">{{ newestProducts[0].name|capitalize }}</a>
                                    </span>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="row top-margin card-panel accent-4 navy-grey-text text-darken-1">
                        <h1 class="left-align  col s12 flow-text">Other recent products</h1>
                    </div>

                    <div class="row">
                    {% for i in 1..5 %}
                        <div class="col s4">
                            <div class="card">
                                <div class="card-image">
                                    <img class= "responsive-img"src="{{ asset(newestProducts[i].picture) }}" alt="{{ newestProducts[i].name }}">
                                    <span class="card-title">
                                        <a href="#">{{ newestProducts[i].name|capitalize }}</a>
                                    </span>
                                </div>
                                <div class="card-content">
                                    <p class="">{{ newestProducts[i].description|truncate(50, true) }}</p>
                                </div>
                                <div class="card-action">
                                    <p class="row flow-text font-m no_margin_vertical"> Expires <b>{{ newestProducts[i].expiringDate|time_diff}}</b></p>
                                    <p class="row flow-text font-m no_margin_vertical"> Price: <b>{{ newestProducts[i].price}}</b>€</p>

                                </div>
                            </div>
                        </div>
                    {% endfor %}
                    </div>

                    <div class="row top-margin card-panel accent-4 navy-grey-text text-darken-1">
                        <h1 class="left-align  col s12 flow-text">Most popular products</h1>
                    </div>

                    <div class="row">
                        {% for i in 0..4 %}
                            <div class="col s4">
                                <div class="card">
                                    <div class="card-image">
                                        <img class= "responsive-img"src="{{ asset(popularProducts[i].picture) }}" alt="{{ popularProducts[i].name }}">
                                    <span class="card-title">
                                        <a href="#">{{ popularProducts[i].name|capitalize }}</a>
                                    </span>
                                    </div>
                                    <div class="card-content">
                                        <p class="">{{ popularProducts[i].description|truncate(50, true) }}</p>
                                    </div>
                                    <div class="card-action">
                                        <p class="row flow-text font-m no_margin_vertical"> Expires <b>{{ popularProducts[i].expiringDate|time_diff}}</b></p>
                                        <p class="row flow-text font-m no_margin_vertical"> Price: <b>{{ popularProducts[i].price}}</b>€</p>

                                    </div>
                                </div>
                            </div>
                        {% endfor %}
                    </div>

                </div>
            </div>

        </div>
    </div>

{%  endblock %}
