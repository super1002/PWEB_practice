{% extends 'base.html.twig' %}

{% form_theme form 'form/FormMaterializeCssTheme.html.twig' %}

{% block body %}

    <div class="container col s12 top-margin3">

        <div class="row">
            <div class="col s12 card-panel navy-grey darken-4 z-depth-5">
                <div class="col s12  center-align card-panel navy-grey darken-3 padding2 white-text">

                    {{  form_start(form) }}
                    <div class="row">
                        <div class="col s12">
                            {{ form_row(form.name) }}
                        </div>
                    </div>
                    <div class="row">
                        <div class="col s12">
                            {{ form_row(form.description, {'attr': {'length' : '500' }}) }}
                        </div>
                    </div>
                    <div class="row ">
                        <div class="col s6">
                            {{ form_row(form.price, {'label': 'Price (â‚¬)'}) }}
                        </div>
                        <div class="col s6">
                            {{ form_row(form.stock) }}
                        </div>
                    </div>
                    <div class="row ">
                        <div class="col s6">
                            <input type="date" class="datepicker">
                            <!--{{ form_row(form.expiringDate, {'attr': {'class' : 'datepicker validate' }}) }}-->
                        </div>
                        <div class="col s6">
                            {{ form_row(form.file) }}
                        </div>
                    </div>
                    <div class="row ">
                        <div class="col s6">
                            {{ form_row(form.category) }}
                        </div>
                    </div>
                    <div class="row top-margin3 bot-margin2">
                        <div class="col right">
                            {{ form_row(form.submit, { 'label': 'Submit' }) }}
                        </div>
                    </div>
                    {{ form_end(form) }}

                </div>
            </div>

        </div>
    </div>



{% endblock %}