{% extends 'base.html.twig' %}

{% form_theme form 'form/FormMaterializeCssTheme.html.twig' %}

{% block body %}

    <div class="container col s12 top-margin3">
    {{  form_start(form) }}
        <div class="row">
            <div class="col s6">
                {{ form_row(form.username) }}
            </div>
            <div class="col s6">
                {{ form_row(form.email) }}
            </div>
        </div>
        <div class="row">
            {{ form_row(form.plainPassword, {'attr': {'id': 'password'}}) }}
        </div>
        <div id="messages"></div>
        <div class="row ">
            <div class="col s6">
                {{ form_row(form.twitter_user) }}
            </div>
        </div>
        <div class="row top-margin3 bot-margin2">
            <div class="col right">
                {{ form_row(form.submit, { 'label': 'Registrar-se' }) }}
            </div>
        </div>
    {{ form_end(form) }}
    </div>



{% endblock %}

{% block javascripts %}
    {{ include('js_includes.twig') }}
    <script src="{{ asset('js/jquery-2.2.0.min.js') }}"></script>
{% endblock %}