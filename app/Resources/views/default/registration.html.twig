{% extends 'base.html.twig' %}

{% form_theme form 'form/FormMaterializeCssTheme.html.twig' %}

{% block body %}

    <div class="container col s12 top-margin3">

        <div class="row">
            <div class="col s12 card-panel navy-grey darken-4 z-depth-5">
                <div class="col s12  center-align card-panel navy-grey darken-3 padding2">

                    {{  form_start(form) }}
                    <div class="row">
                        <div class="col s6">
                            {{ form_row(form.username) }}
                        </div>
                        <div class="col s6">
                            {{ form_row(form.email) }}
                        </div>
                    </div>
                    <div class="row">
                        {{ form_row(form.plainPassword) }}
                    </div>
                    <div class="row ">
                        <div class="col s6">
                            {{ form_row(form.twitter_user) }}
                        </div>
                        <div class="col s6">
                            {{ form_row(form.file) }}
                        </div>
                    </div>
                    <div class="row top-margin3 bot-margin2">
                        <div class="col right">
                            {{ form_row(form.submit, { 'label': 'Register' }) }}
                        </div>
                    </div>
                    {{ form_end(form) }}

                </div>
            </div>

        </div>
    </div>



{% endblock %}

{% block javascripts %}
    {{ include('js_includes.twig') }}
    <script src="{{ asset('js/PasswordMeter.js') }}"></script>
{% endblock %}